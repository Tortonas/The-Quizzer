{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    {% if not app.request.cookies.get('closeWelcomeScreen') == 'true' %}
        <div class="card mx-auto mt-5 transparent card-size">
            <div class="card-body">
                <h1>Sveiki atvykę į The Quizzer!</h1>
                <h3 class="text-muted">- Kas mes?</h3>
                <h4>- Automatizuota klausimanijos sistema kurioje Jūs galite atsakinėti į klausimus bei varžytis su kitais nariais 😍 Daugiau apie mus galite sužinoti <a href="#">dažniausiai užduodamuose klausimuose</a></h4>

                {{ form_start(closePopupForm) }}
                <button type="submit" class="btn btn-danger">Panaikinti langą!</button>
                {{ form_end(closePopupForm) }}
            </div>
        </div>
    {% endif %}

    {% if not showQuestion %}

        <div class="card mx-auto transparent mt-5 card-size">
            <img src="https://i.imgur.com/i4SufCS.png" class="card-img-top" alt="SUSIGALVOTI ALT DECSRIPTION">
            <div class="card-body">
                <h3 class="card-title">Labas! Prašau, nusistatyk savo slapyvardį!</h3>
                <p class="card-text">Norint atsakyti į klausimus, būtina nurodyti savo slapyvardį arba <a href="#">užsiregistruoti</a>. Tik registruoti naudotojai už atsakytus klausimus galės išsigryninti laimėtus taškus! Esi jau narys? Tada prašau tavęs <a href="#">prisijungti</a>! :)</p>
                    {% for message in app.flashes('danger-nickname-form') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(setCustomNicknameForm) }}
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text transparent" id="basic-addon1">😍</span>
                            </div>
                            <input type="text" name="username" class="form-control transparent" placeholder="Slapyvardis" aria-label="Answer" aria-describedby="basic-addon1">
                        </div>
                        <button type="submit" class="btn btn-primary">Išsaugoti</button>
                    {{ form_end(setCustomNicknameForm) }}
            </div>
        </div>

    {% else %}

        <div class="card mx-auto mt-5 transparent card-size">
            <div class="card-body">
                <h2 class="card-title text-center">Klausimas</h2>
                <h6 class="card-subtitle mb-2">Į paskutinį klausimą atsakė - Anonimas</h6>
                <h6 class="card-subtitle mb-2">Klausimas atsinaujins - {{ question[0].timeModified|date_modify("+20 minutes")|date('Y-m-d H:i:s') }}</h6>
                <h3 class="card-text">{{ question[0].question }}</h3>
                {{ form_start(submitAnswerForm) }}
                    {% for message in app.flashes('danger-submit-form') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('success-submit-form') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text transparent" id="basic-addon1">🤔</span>
                        </div>
                        <input type="text" class="form-control transparent" name="answer" placeholder="Atsakymas" aria-label="Answer" aria-describedby="basic-addon1">
                    </div>
                    <button type="submit" class="btn btn-primary">Pateikti</button>
                {{ form_end(submitAnswerForm) }}
            </div>
        </div>

    {% endif %}

{% endblock %}
